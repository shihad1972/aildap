#
#
# Makefile for various small c programs
#
#
CC = gcc
RM = rm -f
ECHO = echo
CFLAGS = -W -Wall -Wshadow -Wcast-qual -Wwrite-strings -Wunused -D_XOPEN_SOURCE=700 -g -DLDAP_DEPRECATED
CPPFLAGS += -I../include/ `pkg-config --cflags glib-2.0`
LDFLAGS = -L../lib `pkg-config --libs-only-L glib-2.0`
LDLIBS = -lailsaldap -lldap -lcrypto `pkg-config --libs-only-l glib-2.0`
bin_PROGRAMS = lcs lcc lcg lcu lcr lcdb lck lcou lcsudo lcdhcp


all:	$(bin_PROGRAMS)

bin:	$(bin_PROGRAMS)

clean:
	$(RM) *.o $(bin_PROGRAMS) *.ldif ../*.ldif
