#
#
# Makefile.am for ldap-utils c programs
#
#
RM = rm -f
ECHO = echo
DIR = src
OLDDIR = old
SUBDIRS = src
DAMDIR = dam
LIBDIR = lib
bin_PROGRAMS = lcs lcc lcg lck lcu lcr lcdb lcou lcsudo lcdhcp hh lds
dam_PROGRAMS = 
lib_LIBRARIES = libailsaldap.a
old_PROGRAMS = lcd tsha gsha gsha2 sha1 lct ssha
sdam_PROGRAMS = 

all:	$(lib_LIBRARIES) $(bin_PROGRAMS) $(dam_PROGRAMS) $(sdam_PROGRAMS)

.PHONY:	clean $(bin_PROGRAMS) $(old_PROGRAMS) $(dam_PROGRAMS) \
	$(sdam_PROGRAMS) $(lib_LIBRARIES)

dam:	$(dam_PROGRAMS)

sdam:	$(sdam_PROGRAMS)

bin:	$(bin_PROGRAMS)

old:	$(old_PROGRAMS)

libs:	$(lib_LIBRARIES)

$(bin_PROGRAMS):	$(lib_LIBRARIES)
	$(MAKE) -C $(DIR) $@

$(old_PROGRAMS):
	$(MAKE) -C $(OLDDIR) $@

$(dam_PROGRAMS):
	$(MAKE) -C $(DAMDIR) $@

$(sdam_PROGRAMS):
	$(MAKE) -C $(DAMDIR) $@

$(lib_LIBRARIES):
	$(MAKE) -C $(LIBDIR) $@

clean:
	cd $(DIR); make $@; \
	cd ../$(OLDDIR); make $@; \
	cd ../$(DAMDIR); make $@; \
	cd ../$(LIBDIR); make $@;

