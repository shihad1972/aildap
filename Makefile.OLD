RM = rm -f
ECHO = echo
DIR = src
OLDDIR = old
SUBDIRS = src
bin_PROGRAMS = lcs lcc lcg lck lcu lcr lcdb

all:	$(bin_PROGRAMS)

lcs:
	cd $(DIR); make $(MFLAGS) $@

lcc:
	cd $(DIR); make $(MFLAGS) $@

lcg:
	cd $(DIR); make $(MFLAGS) $@

lck:
	cd $(DIR); make $(MFLAGS) $@

lcu:
	cd $(DIR); make $(MFLAGS) $@

lcr:
	cd $(DIR); make $(MFLAGS) $@

lcdb:
	cd $(DIR); make $(MFLAGS) $@
	
old-all:
	cd $(OLDDIR); make all

clean:
	cd $(DIR); make $@; cd ../$(OLDDIR); make $@

